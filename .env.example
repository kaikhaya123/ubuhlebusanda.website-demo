# Copy to .env.local (do NOT commit secrets)
# General
NODE_ENV=development
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
CONTACT_RECEIVER_EMAIL=you@example.com

# SendGrid (preferred)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=from@example.com

# SMTP fallback (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password
SMTP_FROM=from@example.com

# reCAPTCHA (optional)
RECAPTCHA_SECRET=

# Optional Redis for rate-limiting (set to enable Redis-backed limiter)
REDIS_URL=redis://:password@hostname:6379/0
